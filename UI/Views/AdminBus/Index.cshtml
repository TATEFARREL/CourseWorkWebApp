@model IEnumerable<BLL.DTOs.BusDto>

@{
    ViewData["Title"] = "Buses Management";
}

<h2>Buses Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Bus</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>License Plate</th>
            <th>Model</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LicensePlate</td>
                <td>@item.Model</td>
                <td>@item.Capacity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this bus?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>